<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment"
    android:background="@color/white">

<!--    TOP MENU BAR-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rounded_top_background"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logout"
            android:background="@drawable/rounded_white_button"
            android:layout_centerVertical="true"
            android:padding="5dp"
            app:tint="@color/accent_orange" />

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_show_popup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:background="@drawable/rounded_accent_button"
            app:tint="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KATEGORI FORUM"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="20dp"/>

            <!--    CATEGORY ICON SECTION -->
            <LinearLayout
                android:id="@+id/ll_category_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:layout_gravity="center">

                <!--        CARD FRUIT-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rl_cat_fruit_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_fruit"
                        android:layout_margin="10dp"
                        android:elevation="8dp">

                        <!--                ICON-->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_fruit"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Buah"
                        android:fontFamily="@font/poppins"/>

                </LinearLayout>

                <!--        CARD VEGGIE-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rl_cat_veggie_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_veggie"
                        android:layout_margin="10dp"
                        android:elevation="8dp">

                        <!--                ICON-->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_veggie"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Sayur"
                        android:fontFamily="@font/poppins"/>

                </LinearLayout>

                <!--        CARD NUTS-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rl_cat_seed_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_nuts"
                        android:layout_margin="10dp"
                        android:elevation="8dp">

                        <!--                ICON-->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_nuts"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Biji-bijian"
                        android:fontFamily="@font/poppins"/>

                </LinearLayout>

                <!--        CARD TREE-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/rl_cat_tree_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_tree"
                        android:layout_margin="10dp"
                        android:elevation="8dp">

                        <!--                ICON-->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_tree"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Pohon"
                        android:fontFamily="@font/poppins"/>

                </LinearLayout>


            </LinearLayout>

            <!--    NEWS SECTION-->
